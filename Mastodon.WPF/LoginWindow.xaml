<Window x:Class="Mastodon.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mastodon.WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <TextBlock Height="144" Margin="10,10,282,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontSize="22"/>

        <TextBox Name="ServerBox" Height="40"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,161,0,0"/>

        <TextBox Name="UserNameBox" TextWrapping="Wrap" Text="" Margin="0,226,0,0" Height="40" VerticalAlignment="Top" d:LayoutOverrides="LeftPosition, RightPosition" />

        <PasswordBox Name="PasswordHereBox"  Height="40" VerticalAlignment="Top" Margin="0,287,0,0"/>

        <Button Name="LoginButton" Click="LoginButton_Click" Content="Login&#xD;&#xA;" HorizontalAlignment="Stretch" Height="70" VerticalAlignment="Bottom" FontSize="22"/>

        <TextBlock Height="45" Margin="229,159,510,0" TextWrapping="Wrap" TextAlignment="Center" Name="FailedTextBox" VerticalAlignment="Top" Foreground="Red" ></TextBlock>
    </Grid>
</Window>
